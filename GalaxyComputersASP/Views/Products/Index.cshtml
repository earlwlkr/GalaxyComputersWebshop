@model IEnumerable<GalaxyComputersASP.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="single-product-area">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="single-product">
                        <div class="product-f-image">
                            <img src=@Html.DisplayFor(modelItem => item.ImagePath) alt="">
                            <div class="product-hover">
                                <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
                                <a href=@Url.Action("Details", "Products") class="view-details-link"><i class="fa fa-search"></i> Chi tiết</a>
                            </div>
                        </div>

                        <h2><a href="single-product.html">@Html.DisplayFor(modelItem => item.Name)</a></h2>

                        <div class="product-carousel-price">
                            <ins>@Html.DisplayFor(modelItem => item.Price)</ins>
                        </div>
                    </div>
                </div>    
            }
        </div>
    </div>
</div>
