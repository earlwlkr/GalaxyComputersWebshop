@model IEnumerable<GalaxyComputersASP.Models.Product>

@{
    ViewBag.Title = "Sản phẩm";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2><b>Sản phẩm</b></h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container main-body">
    <form class="form-inline">
        <div class="form-group">
            <label for="sortItem">Sắp xếp theo: </label>
            <select class="form-control" id="sortItem">
                <option>Tên</option>
                <option>Giá</option>
            </select>
        </div> | 
        <div class="form-group">
            <label for="sortOrder">Thứ tự: </label>
            <select class="form-control" id="sortOrder">
                <option>Tăng dần</option>
                <option>Giảm dần</option>
            </select> | 
        </div>
        <button>Cập nhật</button>
    </form>
 

    <div class="single-product-area">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="single-product">
                            <div class="product-f-image">
                                <img src=@Html.DisplayFor(modelItem => item.ImagePath)>
                                <div class="product-hover">
                                    <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
                                    <a href=@Url.Action("Details/" + item.ID, "Products") class="view-details-link"><i class="fa fa-search"></i> Chi tiết</a>
                                </div>
                            </div>

                            <h2><a href=@Url.Action("Details/" + item.ID, "Products")>@Html.DisplayFor(modelItem => item.Name)</a></h2>

                            <div class="product-carousel-price">
                                <ins>@Html.DisplayFor(modelItem => item.Price)</ins>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    
    $('#nav-item-2').addClass('active');
</script>
